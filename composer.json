{
    "name": "sanmai/pindx-client",
    "type": "library",
    "description": "Клиент для API справочника почтовых индексов России",
    "homepage": "https://www.postindexapi.ru/",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.4 || ^8.0",
        "guzzlehttp/guzzle": "^6.3 || ^7",
        "jms/serializer": "^1.14 || ^2.3 || ^3.8"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.8",
        "friendsofphp/php-cs-fixer": "^3",
        "php-coveralls/php-coveralls": "^2.4",
        "phpunit/phpunit": ">=6",
        "psalm/phar": "^4.8"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-client": "v0.1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "RussianPostIndex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\PIndxTools\\": "tests/"
        }
    }
}
